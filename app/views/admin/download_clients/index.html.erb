<div class="mx-auto max-w-5xl">
  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bold text-4xl text-white">Download Clients</h1>
    <%= link_to "New Client", new_admin_download_client_path, class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white" %>
  </div>

  <% if @download_clients.empty? %>
    <div class="bg-gray-900 border border-gray-800 rounded-lg p-8 text-center">
      <p class="text-gray-400 mb-4">No download clients configured yet.</p>
      <%= link_to "Add your first client", new_admin_download_client_path, class: "text-blue-400 hover:text-blue-300" %>
    </div>
  <% else %>
    <% %w[torrent usenet].each do |type| %>
      <% clients = @download_clients.select { |c| type == 'torrent' ? c.qbittorrent? : c.sabnzbd? } %>
      <% next if clients.empty? %>

      <div class="mb-8">
        <h2 class="text-xl font-semibold text-gray-300 mb-4"><%= type.titleize %> Clients</h2>
        <div class="bg-gray-900 rounded-lg border border-gray-800 overflow-hidden">
          <table class="min-w-full divide-y divide-gray-800">
            <thead class="bg-gray-800/50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Priority</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Name</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Type</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">URL</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-400 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-800">
              <% clients.each_with_index do |client, index| %>
                <tr class="hover:bg-gray-800/50 transition">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center gap-1">
                      <span class="text-gray-300 font-medium"><%= client.priority + 1 %></span>
                      <div class="flex flex-col ml-2">
                        <% if index > 0 %>
                          <%= button_to move_up_admin_download_client_path(client), method: :post, class: "text-gray-500 hover:text-gray-300" do %>
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"></path></svg>
                          <% end %>
                        <% end %>
                        <% if index < clients.length - 1 %>
                          <%= button_to move_down_admin_download_client_path(client), method: :post, class: "text-gray-500 hover:text-gray-300" do %>
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="font-medium text-white"><%= client.name %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 py-1 text-xs rounded <%= client.qbittorrent? ? 'bg-orange-500/20 text-orange-400' : 'bg-blue-500/20 text-blue-400' %>">
                      <%= client.client_type.titleize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-gray-400 text-sm"><%= client.url %></td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 py-1 text-xs rounded <%= client.enabled? ? 'bg-green-500/20 text-green-400' : 'bg-gray-700 text-gray-400' %>">
                      <%= client.enabled? ? 'Enabled' : 'Disabled' %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <%= button_to "Test", test_admin_download_client_path(client), method: :post, class: "text-green-400 hover:text-green-300 mr-3" %>
                    <%= link_to "Edit", edit_admin_download_client_path(client), class: "text-blue-400 hover:text-blue-300 mr-3" %>
                    <%= button_to "Delete", admin_download_client_path(client), method: :delete, class: "text-red-400 hover:text-red-300", data: { turbo_confirm: "Are you sure you want to delete this client?" } %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
