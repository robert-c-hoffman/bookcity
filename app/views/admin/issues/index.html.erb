<div class="mx-auto max-w-4xl" data-controller="bulk-select">
  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bold text-4xl">Issues</h1>
    <% if @requests.any? %>
      <%= button_to "Retry All", retry_all_admin_bulk_operations_path, method: :post, class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition" %>
    <% end %>
  </div>

  <% if notice = flash[:notice] %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block"><%= notice %></p>
  <% end %>

  <% if alert = flash[:alert] %>
    <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block"><%= alert %></p>
  <% end %>

  <% if @requests.empty? %>
    <div class="bg-white rounded-lg shadow p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-green-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No issues</h3>
      <p class="text-gray-500">All requests are processing normally.</p>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-4 mb-4">
      <div class="flex items-center justify-between">
        <label class="flex items-center gap-2 text-sm font-medium text-gray-700">
          <input type="checkbox" data-bulk-select-target="selectAll" data-action="change->bulk-select#toggleAll" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
          Select All
        </label>
        <div data-bulk-select-target="actions" class="hidden flex gap-2">
          <span class="text-sm text-gray-500 mr-2"><span data-bulk-select-target="count">0</span> selected</span>
          <%= form_with url: retry_selected_admin_bulk_operations_path, method: :post, class: "inline", id: "bulk-retry-form" do |f| %>
            <div id="bulk-retry-ids"></div>
            <button type="submit" class="px-3 py-1.5 text-sm bg-blue-600 hover:bg-blue-500 text-white rounded-md font-medium transition" onclick="populateBulkForm('bulk-retry-ids')">
              Retry Selected
            </button>
          <% end %>
          <%= form_with url: cancel_selected_admin_bulk_operations_path, method: :post, class: "inline", id: "bulk-cancel-form" do |f| %>
            <div id="bulk-cancel-ids"></div>
            <button type="submit" class="px-3 py-1.5 text-sm bg-red-600 hover:bg-red-500 text-white rounded-md font-medium transition" onclick="populateBulkForm('bulk-cancel-ids')" data-turbo-confirm="Are you sure you want to cancel these requests?">
              Cancel Selected
            </button>
          <% end %>
        </div>
      </div>
    </div>

    <script>
      function populateBulkForm(containerId) {
        const container = document.getElementById(containerId);
        container.innerHTML = '';
        document.querySelectorAll('[data-bulk-select-target="checkbox"]:checked').forEach(cb => {
          const input = document.createElement('input');
          input.type = 'hidden';
          input.name = 'request_ids[]';
          input.value = cb.value;
          container.appendChild(input);
        });
      }
    </script>

    <div class="space-y-4">
      <% @requests.each do |request| %>
        <div class="bg-white rounded-lg shadow p-4">
          <div class="flex gap-4">
            <div class="flex-shrink-0 flex items-center">
              <input type="checkbox" value="<%= request.id %>" data-bulk-select-target="checkbox" data-action="change->bulk-select#updateSelection" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
            </div>
            <div class="flex-shrink-0 w-16">
              <% if request.book.cover_url.present? %>
                <img
                  src="<%= request.book.cover_url %>"
                  alt="Cover"
                  class="w-full rounded shadow"
                  loading="lazy"
                >
              <% else %>
                <div class="w-full aspect-[2/3] bg-gray-200 rounded shadow flex items-center justify-center">
                  <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                  </svg>
                </div>
              <% end %>
            </div>

            <div class="flex-grow min-w-0">
              <div class="flex items-start justify-between gap-2">
                <div class="min-w-0">
                  <h3 class="font-semibold text-gray-900 truncate"><%= request.book.title %></h3>
                  <% if request.book.author.present? %>
                    <p class="text-sm text-gray-600 truncate"><%= request.book.author %></p>
                  <% end %>
                </div>
                <div class="flex-shrink-0 flex items-center gap-2">
                  <%
                    status_colors = {
                      'pending' => 'bg-yellow-100 text-yellow-800',
                      'searching' => 'bg-blue-100 text-blue-800',
                      'not_found' => 'bg-orange-100 text-orange-800',
                      'downloading' => 'bg-indigo-100 text-indigo-800',
                      'processing' => 'bg-cyan-100 text-cyan-800',
                      'completed' => 'bg-green-100 text-green-800',
                      'failed' => 'bg-red-100 text-red-800'
                    }
                  %>
                  <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium <%= status_colors[request.status] %>">
                    <%= request.status.humanize %>
                  </span>
                  <% if request.retry_count > 0 %>
                    <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 text-gray-800">
                      <%= request.retry_count %> <%= 'retry'.pluralize(request.retry_count) %>
                    </span>
                  <% end %>
                </div>
              </div>

              <% if request.issue_description.present? %>
                <div class="mt-2 p-2 bg-red-50 rounded text-sm text-red-700">
                  <%= request.issue_description %>
                </div>
              <% end %>

              <div class="mt-2 flex items-center gap-4 text-xs text-gray-500">
                <span>Requested by <%= request.user.name %></span>
                <span><%= time_ago_in_words(request.created_at) %> ago</span>
                <% if request.next_retry_at.present? && request.next_retry_at > Time.current %>
                  <span>Next retry in <%= request.next_retry_in_words %></span>
                <% end %>
              </div>

              <div class="mt-3 flex gap-2">
                <%= button_to "Retry Now", retry_admin_issue_path(request), method: :post, class: "px-3 py-1.5 text-sm bg-blue-600 hover:bg-blue-500 text-white rounded-md font-medium transition" %>
                <%= button_to "Cancel", cancel_admin_issue_path(request), method: :post, class: "px-3 py-1.5 text-sm bg-red-600 hover:bg-red-500 text-white rounded-md font-medium transition", data: { turbo_confirm: "Are you sure you want to cancel this request? This cannot be undone." } %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
